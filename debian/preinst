#! /bin/sh -e

isUpstart() {
    /sbin/init --version 2>/dev/null | grep -q 'upstart'
    if [ "$?" = "0" ]; then
        return 0
    else 
        return 1
    fi
}

isSystemd() {
    /bin/systemctl 2>/dev/null | grep -q '\-\.mount'
    if [ "$?" = "0" ]; then
        return 0
    else 
        return 1
    fi
}

if isUpstart; then
    PID=$(status "stream-radio" 2>/dev/null | awk '/[0-9]$/ { print $NF }')
    [ -z "$PID" ] || kill -HUP $PID
fi

if isSystemd; then
	if systemctl is-active stream-radio; then
    	systemctl stop stream-radio
    fi
fi

exit 0

#DEBHELPER#
